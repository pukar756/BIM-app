<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:text="BMI CALCULATOR"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/tvTitle"/>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:ems="10"
        android:textColor="@android:color/white"
        android:hint="ENTER YOUR WEIGHT (in KGs)"
        android:inputType="text"
        android:layout_marginLeft="-310dp"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/tvTitle"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etWeight"
        android:layout_marginLeft="-313dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/tvTitle"
        android:ems="10"
        android:textColor="@android:color/white"
        android:hint="ENTER YOUR HEIGHT (in meters)"
        android:inputType="text"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etHeight"
        android:layout_marginLeft="-222dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/etHeight"
        android:background="@color/colorPrimaryDark"
        android:text="CALCULATE BMI"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_below="@id/btnCalc"
        android:layout_marginLeft="-238dp"
        android:layout_marginTop="72dp"
        android:layout_toRightOf="@id/btnCalc"
        android:text="Your BMI Result"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-186dp"
        android:layout_marginTop="481dp"
        android:text="BMI"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="40sp" />
</RelativeLayout>